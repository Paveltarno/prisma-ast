{
  "name": "prisma-ast",
  "version": "1.0.0",
  "description": "A printer and parser for Prisma.io's schema",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "npm run build:parser && npm run lint && npm run build:ts",
    "build:ts": "tsc",
    "build:parser": "pegjs ./vendor/prisma-ast.pegjs",
    "test": "npm run build:parser && jest",
    "lint": "npm run lint:prettier && npm run lint:tslint",
    "lint:prettier": "prettier ./src/**/*.ts --write",
    "lint:tslint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "author": "Pavel Tarnopolsky",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/ramda": "^0.26.36",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "pegjs": "^0.11.0-master.b7b87ea",
    "ramda": "^0.26.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint -c tslint.json",
      "prettier --write",
      "git add"
    ]
  }
}
